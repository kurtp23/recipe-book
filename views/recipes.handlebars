<link rel="stylesheet" href="../css/recipes.css" />

<nav>
  <div class="nav-wrapper yellow darken-2">

    <div id="logo" class="logo brand-logo"><i class="material-icons">book</i>RecipeBook</div>

    <ul class="right hide-on-med-and-down">
      <li><a href="/newRecipe">Add</a></li>
      <li><a class=" white-text" href="/">Menu</a></li>
      <li><a class="white-text" href="" onclick="printDiv('print-screen')">Print</a></li>
      <li><a class="" href="/login">Exit</a></li>
    </ul>
    <ul class="right hide-on-med-and-down"></ul>
  </div>
</nav>

<div class="row search-bar">
  <div class="col s2 side-nav">
    <form>
      <div class="input-field">
        <i class="material-icons prefix">search</i>
        <input id="search" type="search" required>
        <label class="label-icon" for="search" id="searchBtn"></label>
        <i class="material-icons">close</i>
      </div>
    </form>
    <div class="collection">
      {{#each titles}}
      <a href="/recipe/{{this.id}}" id={{this.id}} class="collection-item black-text">{{this.title}}</a>
      {{/each}}
    </div>
      </div>

  
  <div  class="container col s10">

    <div id="print-screen" class="col recipe-card s12">
      <div class="col s12">
        <h2 class="recipe-title">{{recipe.title}}</h2>

        <div class="recipe-details"><!--recipe-details-->

        <div class="ingredients">
          <h4>Ingredients</h4>
          <ul>
            {{#each recipe.ingredients}}
            <li>
              {{this.quantity}} {{this.measurement}} {{this.name}}
            </li>
            {{/each}}
          </ul>
        </div> <!--ingredients-->

        <div class="instructions">
          <h4>Instructions</h4>
          <ul>
            {{#each recipe.instructions}}
            <li>
              {{this}}
            </li>
            {{/each}}
          </ul>
        </div> <!--instuctions-->
      </div> <!--recipe-details-->

      </div> <!--recipe card-->
    </div> <!--recipe section-->
  </div> <!--containter-->

<script src="/js/recipes.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>