<link rel="stylesheet" href="../css/recipes.css" />

<nav>
  <div class="nav-wrapper yellow darken-2">

    <div id="logo" class="logo brand-logo"><i class="small material-icons">book</i>RecipeBook</div>

    <ul class="right hide-on-med-and-down">
      <li><a href="/newRecipe">Add</a></li>
      <li><a class=" white-text" href="/">Menu</a></li>
      <li><a class="" href="/login">Exit</a></li>
    </ul>
    <ul class="right hide-on-med-and-down"></ul>
  </div>
</nav>

<div class="row ">
  <div class="col side-nav">
    <form>
      <div class="input-field">
        <input id="search" type="search" required>
        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        <i class="material-icons">close</i>
      </div>
    </form>
    <div class="collection">
      {{#each titles}}
      <a href="/recipe/{{this.id}}" id={{this.id}} class="collection-item black-text">{{this.title}}</a>
      {{/each}}
    </div>
      </div>


  <div class="container recipe-page">

      <div class="col s9">
    <h1>{{recipe.title}}</h1>
    <h3>Ingredients</h3>
    <ul>
      {{#each recipe.ingredients}}
      <li>
        {{this.quantity}} {{this.measurement}} {{this.name}}
      </li>
      {{/each}}
    </ul>
    <h3>Instructions</h3>
    <ul>
      {{#each recipe.instructions}}
      <li>
        {{this}}
      </li>
      {{/each}}
    </ul>
  </div>

    
</div> <!--containter-->

</div>

<script src="/js/recipes.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>